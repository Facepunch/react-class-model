{
  "compilerOptions": {
    "moduleResolution": "node",
    "lib": ["dom", "es6"],
    "target": "es6",
    "module": "commonjs",
    "declaration": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "allowJs": true,
    "strictNullChecks": true
  },
  "exclude": [
    "dist/",
    "coverage/",
    "src/**/*.test.ts",
  ],
}
